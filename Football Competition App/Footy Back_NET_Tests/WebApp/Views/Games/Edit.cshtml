@model WebApp.ViewModels.Games.GameCreateEditViewModel

@{
    //ViewData["Title"] = Base.Resources.Views.Shared.Basic.Edit;
}

<h4 class="text-center">@Model.Game.Name</h4>

<hr />
<p class="redStar">@Base.Resources.Views.Shared.Basic.RequiredField</p>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <partial name="_CreateEdit" model="Model"/>
            <input type="hidden" asp-for="Game.Id" />
            <input type="hidden" asp-for="Game.CompetitionId" />
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Views.Shared.Basic.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
