@model WebApp.ViewModels.Games.GameCreateEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <div>
        <label asp-for="Game.HomeId" class="control-label"></label> *
    </div>
    <select asp-for="Game.HomeId" class="form-control" asp-items="Model.HomeTeamSelectList">
        <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
    </select>
    <span asp-validation-for="Game.HomeId" class="text-danger"></span>
</div>
<div class="form-group">
    <div>
        <label asp-for="Game.AwayId" class="control-label"></label> *
    </div>
    <select asp-for="Game.AwayId" class="form-control" asp-items="Model.AwayTeamSelectList">
        <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
    </select>
    <span asp-validation-for="Game.AwayId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Game.HomeScore" class="control-label"></label>
    <input asp-for="Game.HomeScore" class="form-control"/>
    <span asp-validation-for="Game.HomeScore" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Game.AwayScore" class="control-label"></label>
    <input asp-for="Game.AwayScore" class="form-control"/>
    <span asp-validation-for="Game.AwayScore" class="text-danger"></span>
</div>
<div class="form-group">
    <div>
        <label asp-for="Game.GameTypeId" class="control-label"></label> *
    </div>
    <select asp-for="Game.GameTypeId" class="form-control" asp-items="Model.GameTypeSelectList">
        <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
    </select>
    <span asp-validation-for="Game.GameTypeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Game.KickOffTime" class="control-label"></label>
    <input asp-for="Game.KickOffTime" class="form-control"/>
    <span asp-validation-for="Game.KickOffTime" class="text-danger"></span>
</div>
<div class="form-group">
    <div>
        <label asp-for="GameLength.HalfLength" class="control-label"></label> *
    </div>
    <input asp-for="GameLength.HalfLength" class="form-control"/>
    <span asp-validation-for="GameLength.HalfLength" class="text-danger"></span>
</div>
<div class="form-group">
    <div>
        <label asp-for="GameLength.ExtraTimeHalfLength" class="control-label"></label> * (@Base.Resources.DTO.v1.Game.IfExtraTimeOrPenalties)
    </div>
    <input asp-for="GameLength.ExtraTimeHalfLength" class="form-control"/>
    @if (Model.ExtraTimeError != null)
    {
        <span asp-validation-for="GameLength.ExtraTimeHalfLength" class="text-danger">@Model.ExtraTimeError</span>
    }
</div>
<div class="form-group">
    <label asp-for="Game.Comment" class="control-label"></label>
    <textarea asp-for="Game.Comment" class="form-control"></textarea>
    <span asp-validation-for="Game.Comment" class="text-danger"></span>
</div>
<input type="hidden" asp-for="competitionId" />