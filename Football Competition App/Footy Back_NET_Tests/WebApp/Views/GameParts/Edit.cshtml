@model WebApp.ViewModels.GameParts.CreateEditViewModel

@{
    //ViewData["Title"] = @Base.Resources.Views.Shared.Basic.Edit;
}

<h4 class="text-center">@Base.Resources.Views.Shared.Basic.Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GamePart.GameId" class="control-label"></label>
                <select asp-for="GamePart.GameId" class="form-control" asp-items="Model.GameSelectList"></select>
                <span asp-validation-for="GamePart.GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamePart.GamePartTypeId" class="control-label"></label>
                <select asp-for="GamePart.GamePartTypeId" class="form-control" asp-items="Model.GamePartTypeSelectList"></select>
                <span asp-validation-for="GamePart.GamePartTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamePart.Length" class="control-label"></label>
                <input asp-for="GamePart.Length" class="form-control" />
                <span asp-validation-for="GamePart.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamePart.AdditionalTime" class="control-label"></label>
                <input asp-for="GamePart.AdditionalTime" class="form-control" />
                <span asp-validation-for="GamePart.AdditionalTime" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="GamePart.Id" />
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Views.Shared.Basic.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Views.Shared.Basic.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
