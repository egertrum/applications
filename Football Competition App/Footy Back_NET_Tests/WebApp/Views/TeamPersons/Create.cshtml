@model WebApp.ViewModels.TeamPersons.TeamPersonCreateEditViewModel

@{
    //ViewData["Title"] = @Base.Resources.Views.Shared.Basic.Create;
}

<h4 class="text-center">@Base.Resources.DTO.v1.TeamPerson.AddTeamMember</h4>
@if (Model.Error != null)
{
    <h6 class="text-center" style="color: red">@Model.Error</h6>
}
<hr />
<p class="redStar">@Base.Resources.Views.Shared.Basic.RequiredField</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                        <label asp-for="TeamPerson.TeamId" class="control-label"></label> *
                    </div>
                <select asp-for="TeamPerson.TeamId" class="form-control" asp-items="Model.TeamSelectList">
                    <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
                </select>
                <span asp-validation-for="TeamPerson.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="TeamPerson.PersonId" class="control-label"></label> *
                </div>
                <select asp-for="TeamPerson.PersonId" class="form-control" asp-items="Model.PersonSelectList">
                    <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
                </select>
                <span asp-validation-for="TeamPerson.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="TeamPerson.RoleId" class="control-label"></label> *
                </div>
                <select asp-for="TeamPerson.RoleId" class="form-control" asp-items="Model.RoleSelectList">
                    <option value="@null">@Base.Resources.Views.Shared.Basic.SelectOption</option>
                </select>
                <span asp-validation-for="TeamPerson.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="TeamPerson.Since" class="control-label"></label> *
                </div>
                <input asp-for="TeamPerson.Since" class="form-control" />
                <span asp-validation-for="TeamPerson.Since" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPerson.Until" class="control-label"></label>
                <input asp-for="TeamPerson.Until" class="form-control" />
                <span asp-validation-for="TeamPerson.Until" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Views.Shared.Basic.Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
