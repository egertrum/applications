@model IEnumerable<PublicApi.DTO.v1.TeamPerson>

@{
    //ViewData["Title"] = @Base.Resources.DTO.v1.TeamPerson.TeamPersons;
}

<h4 class="text-center">@Base.Resources.DTO.v1.TeamPerson.TeamPersons</h4>

<p>
    <a asp-action="Create">@Base.Resources.Views.Shared.Basic.CreateNew</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Since)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Until)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Since)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Until)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Base.Resources.Views.Shared.Basic.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Base.Resources.Views.Shared.Basic.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
