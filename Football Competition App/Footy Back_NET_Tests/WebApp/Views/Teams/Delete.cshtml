@model WebApp.ViewModels.Teams.TeamDeleteViewModel

@{
    //ViewData["Title"] = @Base.Resources.Views.Shared.Basic.Delete;
}

<h4 class="text-center">@Base.Resources.Views.Shared.Basic.SureDeleteThis</h4>
@if (Model.Error != null)
{
    <h5 class="errorClass">@Model.Error</h5> 
}
<div>
    <partial name="_DetailsDelete" model="@Model.Team"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Team.Id" />
        <input type="submit" value="@Base.Resources.Views.Shared.Basic.Delete" class="btn btn-danger" /> |
    </form>
</div>
