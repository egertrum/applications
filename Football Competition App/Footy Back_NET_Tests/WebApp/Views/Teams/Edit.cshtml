@model WebApp.ViewModels.Teams.TeamCreateEditDetailsViewModel

@{
    //ViewData["Title"] = Model.Team.Name;
}

<h4 class="text-center">@Model.Team.Name</h4>
<hr />
<div class="row-cols-1">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_CreateEdit" model="Model"/>
            <input type="hidden" asp-for="Team.Id" />
            <input type="hidden" asp-for="Team.AppUserId" />
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Views.Shared.Basic.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
