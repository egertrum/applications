@model WebApp.ViewModels.PollQuestion.PollQuestionCreateViewModel

<h1 class="text-center">Add new question to poll</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Quiz</label>
                <select asp-for="PollQuestion.PollId" class="form-control" asp-items="@Model.PollsSelectList">
                    <option value="@null">---Please select---</option>
                </select>
                <span asp-validation-for="PollQuestion.PollId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Question</label>
                <select asp-for="PollQuestion.QuestionId" class="form-control" asp-items="@Model.QuestionsSelectList">
                    <option value="@null">---Please select---</option>
                </select>
                <span asp-validation-for="PollQuestion.QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>